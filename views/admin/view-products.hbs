<section>
    <div class="container">
      <div class="row mt-4">
        <a href="/admin/add-products" class="btn btn-success ml-auto" >Add products</a>
      </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">Number</th>
      <th> Image</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td><img src="/images/{{this._id}}.jpg" alt="" style="width:60px ; height: 60px;"> </td>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td>{{this.Price}}</td>
      <td>
          <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
          <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('are you want to delete {{this.Name}} ?')">Delete</a>
      </td>    
    </tr>
    {{/each}}
    
  </tbody>
</table>
    </div>
</section>