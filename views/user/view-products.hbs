<section>
  <div class="container mt-5">
    <div class="row">
      {{#each products}}

      <div class="card mb-3" style="max-width: 540px;  margin-left: 16px;">
        <div class="row no-gutters">
          <div class="col-md-4">
            <img src="/images/{{this._id}}.jpg" class="card-img-top" alt="Card image cap" style="height:12rem;">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">{{this.Name}}</h5>
              <p class="card-text">
              <h5>Description:</h5> {{this.Description}}</p>
              <h5 class="card-title">Rs.{{this.Price}}</h5>
              <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
            </div>
          </div>
        </div>
      </div>
      
      {{/each}}
    </div>
  </div>
</section>