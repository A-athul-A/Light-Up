<section>
  <div class="mt-5">
    <div class="row">
      {{#each products}}

      <div class="col md-3 p3">
        <div class="card" style="width:15rem; height:24rem;">
          <img class="card-img-top"
          src="/images/{{this._id}}.jpg"
          alt="card image cap"
          style="height:12rem;">
          <div class="card-body">
            <h5 class="card-title">{{this.products.Name}}</h5>
            <p class="card-text">{{this.products.Price}}</p>
            <p class="card-text">Quantity{{this.quantity}}</p>
            <p class="card-text">{{this.products.Description}}</p>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>